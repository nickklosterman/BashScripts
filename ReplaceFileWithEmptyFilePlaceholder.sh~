#!/bin/bash
Number_Of_Expected_Args=1
if [ $# -lt $Number_Of_Expected_Args ]
then
    echo "Usage: ReplaceFileWithEmptyFilePlaceholder file <file> ..."
else
    until [ -z "$1" ] #loop through all arguments using shift to move through arguments                                                                      
    do
	rm "${1}"
	touch "${1}"
	shift
    done
fi
